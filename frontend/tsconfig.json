{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true
    },
    "include": [
        "components/postManagement/PostManagement.jsx",
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "components/footer/Footer.test.js",
        "components/postCreation/PostCreation.jsx",
        "components/modifyPost/ModifyPost.jsx",
        "components/input/Input.jsx",
        "components/post/Post.jsx",
        "components/navButton/NavButton.jsx",
        "components/header/Header.jsx"
    ],
    "exclude": ["node_modules"]
}
